<Window x:Class="HmPro.Windows.Interaction.Startup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HmPro.Windows.Interaction"
        mc:Ignorable="d"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" ShowInTaskbar="False" Height="450" Width="800" FontFamily="Candara" ContentRendered="Window_ContentRendered" Closing="Window_Closing">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Hmmm Pro;component/Graphics/Welcome Screen.png"/>
        </Grid.Background>
        <Rectangle HorizontalAlignment="Left" Height="111" Margin="0,24,0,0" VerticalAlignment="Top" Width="276">
            <Rectangle.Stroke>
                <SolidColorBrush Color="{DynamicResource Grey1}"/>
            </Rectangle.Stroke>
            <Rectangle.Fill>
                <SolidColorBrush Color="{DynamicResource Grey1}"/>
            </Rectangle.Fill>
        </Rectangle>
        <Label Content="Hmmm Pro" HorizontalAlignment="Left" VerticalAlignment="Top" Width="auto" Height="75" Foreground="White" FontSize="50" Margin="0,24,0,0" FontFamily="SimSun"/>
        <Label x:Name="Vers" Content="2019.1 BETA AA-B30" HorizontalAlignment="Left" Margin="0,99,0,0" VerticalAlignment="Top" Width="auto" Height="36" Foreground="White" FontSize="20"/>
        <TextBlock x:Name="ConfigText" Text="Hmmm Pro | Artwork: Connor Sellars" HorizontalAlignment="Left" Margin="0,420,0,0" VerticalAlignment="Top" Width="800" Height="30" Foreground="White" FontSize="13" TextWrapping="Wrap" Background="#C52C2C2C"/>
    </Grid>
</Window>
