<Window x:Class="HmPro.Windows.Editing.ObjectSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HmPro.Windows.Editing"
        mc:Ignorable="d"
        Title="Object Seletor" Height="450" Width="800" Loaded="Window_Loaded" ResizeMode="CanMinimize" Closing="Window_Closing">
    <Window.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="{x:Null}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="5" BorderThickness="3">
                            <Border.Style>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <SolidColorBrush Color="{DynamicResource Grey1}"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="BorderBrush">
                                        <Setter.Value>
                                            <SolidColorBrush Color="{DynamicResource Accent2}"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <SolidColorBrush Color="{DynamicResource Accent2}"/>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="BorderBrush">
                                                <Setter.Value>
                                                    <SolidColorBrush Color="{DynamicResource Accent2}"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="152*"/>
            <ColumnDefinition Width="245*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <LinearGradientBrush.RelativeTransform>
                    <TransformGroup>
                        <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                        <SkewTransform CenterY="0.5" CenterX="0.5"/>
                        <RotateTransform Angle="111.801" CenterY="0.5" CenterX="0.5"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </LinearGradientBrush.RelativeTransform>
                <GradientStop Color="#FF32312F" Offset="0"/>
                <GradientStop Color="#FFB9A486" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TreeView x:Name="VisualTree" HorizontalAlignment="Left" Height="399" Margin="10,10,0,0" VerticalAlignment="Top" Width="284" Foreground="White" TreeViewItem.Selected="VisualTree_Selected">
            <TreeView.BorderBrush>
                <SolidColorBrush Color="{DynamicResource Accent1}"/>
            </TreeView.BorderBrush>
            <TreeView.Background>
                <SolidColorBrush Color="{DynamicResource Grey2}"/>
            </TreeView.Background>
        </TreeView>

        <TextBlock x:Name="ObjTitle" TextAlignment="Center" FontSize="22" Foreground="White" HorizontalAlignment="Left" Margin="10,43,0,0" TextWrapping="Wrap" Text="No Object Selected" VerticalAlignment="Top" Width="470" Height="36" Grid.Column="1"/>
        <TextBlock x:Name="Type" TextAlignment="Center" FontSize="15" Foreground="White" FontStyle="Italic" HorizontalAlignment="Left" Margin="106,79,0,0" TextWrapping="Wrap" Text="No Type" VerticalAlignment="Top" Width="276" Height="25" Grid.Column="1"/>

        <Button Content="Select Object" Click="Connect_Click" Grid.Column="1" HorizontalAlignment="Left" Margin="71,199,0,0" VerticalAlignment="Top" Width="167" Height="28"/>
        <Button Content="Cancel Job" Click="CancelJob_Click" Grid.Column="1" HorizontalAlignment="Left" Margin="243,199,0,0" VerticalAlignment="Top" Width="167" Height="28"/>
        <TextBlock x:Name="Type_Copy" TextAlignment="Center" FontSize="15" Foreground="White" FontStyle="Italic" HorizontalAlignment="Left" Margin="10,363,0,0" TextWrapping="Wrap" Text="Notice: If the Type says 'Duplicate Items', another window will show up after you click 'Select Object' to select which duplicate you want." VerticalAlignment="Top" Width="470" Height="48" Grid.Column="1"/>
    </Grid>
</Window>
